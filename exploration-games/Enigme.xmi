<?xml version="1.0" encoding="UTF-8"?>
<game:Game xmi:version="2.0"
    xmlns:xmi="http://www.omg.org/XMI"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:game="http://www.Game.mygame">
  <player name="Anonyme"
      maxObjects="2"
      currentPlace="//@gamePlaces.0"/>
  <gamePlaces
      name="Enigme"
      placeType="begin">
    <placeObjects
        xsi:type="game:Person"
        name="Sphinx"/>
    <placeObjects
        xsi:type="game:Object"
        name="Tentative"
        size="2"/>
    <placeObjects
        xsi:type="game:Knowledge"
        name="Reussite"/>
    <allocations
        count="2"
        obj="//@gamePlaces.0/@placeObjects.1"
        player="//@player"/>
    <interactions
        person="//@gamePlaces.0/@placeObjects.0">
      <choices
          xsi:type="game:ActionsChoice"
          name="answer">
        <actions
            name="Reponse1"/>
        <actions
            name="Reponse2"/>
        <actions
            name="Reponse3"/>
        <effects
            ChosenAction="//@gamePlaces.0/@interactions.0/@choices.0/@actions.0">
          <gainKn
              kn="//@gamePlaces.0/@placeObjects.2"/>
          <consommations
              count="1"
              objet="//@gamePlaces.0/@placeObjects.1"/>
        </effects>
        <effects
            ChosenAction="//@gamePlaces.0/@interactions.0/@choices.0/@actions.1">
          <consommations
              count="1"
              objet="//@gamePlaces.0/@placeObjects.1"/>
        </effects>
        <effects
            ChosenAction="//@gamePlaces.0/@interactions.0/@choices.0/@actions.2">
          <consommations
              count="1"
              objet="//@gamePlaces.0/@placeObjects.1"/>
        </effects>
      </choices>
    </interactions>
    <paths src="//@gamePlaces.0"
        destination="//@gamePlaces.1">
      <OpenCond>
        <condElements
            xsi:type="game:KnowledgeCond"
            kn="//@gamePlaces.0/@placeObjects.2"/>
      </OpenCond>
    </paths>
    <paths src="//@gamePlaces.0"
        destination="//@gamePlaces.2">
      <OpenCond>
        <condElements
            xsi:type="game:Comparaison"
            obj="//@gamePlaces.0/@placeObjects.1"
            op="="/>
      </OpenCond>
    </paths>
  </gamePlaces>
  <gamePlaces
      name="Success"/>
  <gamePlaces
      name="Echec"/>
</game:Game>
